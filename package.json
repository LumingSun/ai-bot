{
  "name": "desktop-pet",
  "version": "1.0.0",
  "description": "桌面电子宠物系统",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "dev:full": "concurrently --kill-others \"npm run dev\" \"npm run dev:backend\" \"wait-on http://localhost:5173 && wait-on -d 1000 http://localhost:8001/pet && npm run dev:electron\"",
    "dev:backend": "cd backend && python main.py",
    "build": "vite build",
    "dist": "electron-builder",
    "test": "jest"
  },
  "keywords": [
    "electron",
    "desktop",
    "pet",
    "ai"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^8.2.2",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "jest": "^30.0.5",
    "vite": "^7.0.6",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "build": {
    "appId": "com.example.desktop-pet",
    "productName": "Desktop Pet",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "dist/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.entertainment",
      "icon": "assets/icon.icns"
    }
  }
}
